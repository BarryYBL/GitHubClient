@import "/wxParse/wxParse.wxss";
.repoContainer{
  width: 100%;
  margin: 0px;
  padding: 0px;
  box-sizing: border-box;
  -moz-box-sizing: border-box;
  -webkit-box-sizing: border-box;
  overflow-x: hidden;
}
.clearFix{
  overflow: auto;
  text-align: bottom;
  zoom: 1;
}

.repoHeader{
  top: 0px;
  left: 0px;
  width: 100%;
  padding-left: 20px;
  padding-right:10px;
  line-height: 50px;
  vertical-align: middle;
  border-bottom: solid 1px #f7f7f7;
  background-color: #ffffff;
  z-index: 2;
  box-shadow: 2px 2px 6px #cccccc;
  box-sizing: border-box;
}

.repFooter{
  position: fixed;
  bottom: 0px;
  left: 0px;
  width: 100%;
  height: 50px;
  background-color: #ffffff;
  box-sizing: border-box;
  z-index: 2;
}
.footerTab{
  width: calc( 50% - 2px );
  height: 48px;
  line-height: 50px;
  vertical-align: middle;
  text-align: center;
  margin:1px;
  float: left;
}
.tabHover{
  font-weight: bolder;
  font-size: 20px;
}
.repoReadMe{
  padding: 10px;
  width: 99%;
  overflow: auto;
  margin-top: 30px;
  margin-bottom: 65px;
  box-sizing: border-box;
}