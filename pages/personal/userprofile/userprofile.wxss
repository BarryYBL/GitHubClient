.profileHeader {
  display: flex;
  flex-wrap: wrap;
  height: 50px;
  box-shadow: 2px 2px 10px #ccc;
  background-color: #fff;
  box-sizing: border-box;
  width: 100%;
}

.tabHeader {
  height: 50px;
  line-height: 50px;
  width: 25%;
  text-align: center;
  vertical-align: middle;
  flex-direction: row;
  box-sizing: border-box;
  color:#cccccc;
}

