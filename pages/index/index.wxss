.userinfo {
  /* display: flex;
  flex-direction: column;
  align-items: center; */
  width: 100%;
  height: 100%;
  margin: 0px;
  padding: 0px;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
  margin-bottom: 10px;
}

.loginInput {
  margin-bottom: 10px;
  background-color: #f8f8f8;
  width: 90%;
  margin-left: 5%;
  height: 40px;
  line-height: 40px;
  vertical-align: middle;
  padding-left: 10px;
  padding-right: 10px;
  box-sizing: border-box;
}

.loginBtn {
  width: 90%;
  margin-left: 5%;
}

.personalLabel {
  flex-direction: column;
  width: 50%;
  text-align: center;
  height: 60px;
  line-height: 60px;
  vertical-align: middle;
  border: solid 1px #f7f7f7;
  background-color: #fefefe;
  box-sizing: border-box;
}

.logoutbtn {
  position: fixed;
  top:10px;
  right:10px;
}
