/**index.wxss**/
page{
  background-color: #f9f9f9;
}
.profileHeader{
  width:100%;text-align:center;
  box-shadow: 1px 1px 5px #cccccc;
  height: auto;
  background-color: #ffffff;
}
.userinfo {
  /* display: flex;
  flex-direction: column;
  align-items: center; */
  width: 100%;
  height: 100%;
  margin: 0px;
  padding: 0px;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  border-radius: 50%;
  margin:10px auto;
}

.loginInput {
  margin-top: 15px;
  margin-bottom: 10px;
  background-color: #f8f8f8;
  width: 90%;
  margin-left: 5%;
  height: 40px;
  line-height: 40px;
  vertical-align: middle;
  padding-left: 10px;
  padding-right: 10px;
  box-sizing: border-box;
}

.loginBtn {
  width: 90%;
  margin-left: 5%;
}

.personalLabel {
  display: flex;
  flex-wrap:wrap;
  flex-direction: column;
  width: 96%;
  margin-left:2%;
  margin-bottom:10px;
  text-align: center;
  height: 90px;
  line-height: 90px;
  vertical-align: middle;
  border: solid 1px #f7f7f7;
  background-color: #fefefe;
  box-sizing: border-box;
  
}
.labelItem{
  flex-direction: row;
  height:90px;
  line-height: 90px;
  vertical-align: middle;
  box-sizing: border-box;
}


